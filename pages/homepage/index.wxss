/* pages/list/list.wxss */
page {
  height: 100%;
  background-color: #e6e6e6;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.main-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex: 1;
  border-top: 1px solid #e6e6e6;
}
.menu-view {
  width: 150rpx;
  min-width: 150rpx;
  padding-bottom: 160rpx;
  background-color: #fff;
}
.menu-scroll {
  /* height: 1200rpx; */
  background-color: #fff;
  height: 100%;
}
.menu-item {
  height: 108rpx;
  line-height: 108rpx;
  width: 104rpx;
  background-color: #fff;
  border-bottom: 1px solid #e6e6e6;
  color: #777;
  font-size: 26rpx;
  text-align: left;
  padding: 0 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.menu-active {
  color: #23a4bb;
  background-color: #f6f6f6;
}
.items-view {
  flex: 1;
}
.items-scroll {
  /* height: 1200rpx; */
  /* background-color: palevioletred; */
  height: 100%;
}
/* single shop item style begin */
.items-nav-title {
  /* background-color: rebeccapurple; */
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.item-view {
  position: relative;
  padding: 20rpx;
  padding-top: 0rpx;
  height: 280rpx;
}
.item-img {
  width: 560rpx;
  height: 280rpx;
  position: absolute;
  top: 0;
  left: 20rpx;
  border-radius: 6rpx;
}
.item-view-ct {
  position: relative;
  height: 100%;
  width: 100%;
}
.item-view-ct-first {
  line-height: 1;
  position: absolute;
  left: 16rpx;
  bottom: 20rpx;
  color: #fff;
  text-align: left;
  background-color: rgba(47, 47, 47, 0.3);
  border-radius: 6rpx;
  padding: 10rpx;
}
.item-view-ct-first .price {
  font-size: 28rpx;
}
.item-view-ct-first .name {
  font-size: 30rpx;
  padding-bottom: 27rpx;
}
.item-view-ct-second {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.btn-sm {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
}
.add {
  font-size: 28rpx;
  color: #23a4bb;
  background-color: #fff;
}
/* single shop item style end */
/* Cart Style begin */
.cart-view {
  position: relative;
  height: 98rpx;
  z-index: 100;
}
.shadow-default {
  box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.35);
}
.cart-glimpse {
  width: 100%;
  display: flex;
  position: absolute;
  background-color: #fff;
  z-index: 100;
}
.cart-to-detail {
  position: relative;
  display: flex;
  flex: 1;
}
.total-fee {
  position: absolute;
  right: 10px;
  height: 100%;
  line-height: 98rpx;
  color: #ff5353;
}
.cart-ico {
  width: 80rpx;
  height: 80rpx;
  margin-top: 9rpx;
  margin-left: 30rpx;
}
.cart-glimpse-des {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #2f2f2f;
  line-height: 98rpx;
}
.ordered-view {
  width: 200rpx;
  height: 98rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  right: 0rpx;
  bottom: 0rpx;
  color: #fff;
  background-color: #a3a1a3;
}
.ordered-selected {
  background-color: #39adc2;
}
/* Cart details */
.cart-detail {
  width: 100%;
  position: fixed;
  /* bottom: 98rpx;  */
  background-color: #fff;
  bottom: 98rpx;
  z-index: 99;
}
.cart-header {
  position: relative;
  background-color: #e3e3e3;
  height: 100rpx;
}
.cart-header > text {
  line-height: 1;
  font-size: 30rpx;
  color: #2f2f2f;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -60rpx;
  margin-top: -15rpx;
}
.cart-header-btns {
  height: 100%;
  display: flex;
  position: absolute;
  right: 30rpx;
  align-items: center;
  /* margin-right: 30rpx; */
}
.cart-header-btns image {
  width: 30rpx;
  height: 29rpx;
}
.cart-header-btns > text {
  font-size: 24rpx;
  color: #797979;
  margin-left: 10rpx;
}
/* selected items style begin */
.cart-scroll {
  min-height: 360rpx;
  max-height: 600rpx;
  padding-top: 10rpx;
}
.cart-item {
  position: relative;
  padding: 20rpx;
  /* padding-bottom: 10rpx; */
}
.item-des {
  float: left;
  line-height: 1;
}
.item-name {
  font-size: 32rpx;
  color: #2f2f2f;
}
.item-price {
  line-height: 1;
  position: absolute;
  top: 50%;
  right: 220rpx;
  margin-top: -14rpx;
  font-size: 28rpx;
  color: #ff5353;
}
.item-btns-list {
  float: right;
  display: flex;
  align-items: center;
  right: 30rpx;
  top: 50%;
  margin-top: -35rpx;
}
.item-btns {
  float: right;
  display: flex;
  align-items: center;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -35rpx;
}
.item-btns text {
  width: 32rpx;
  padding: 0 6rpx;
  text-align: center;
  font-size: 30rpx;
  color: #31c3dd;
  display: inline-block;
}
.btns-de,
.btns-in {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  padding: 10rpx;
}
.clfff {
  color: #fff;
  font-weight: 300;
}
/* selected items style end */
/* menu-btn styles begin*/
.menu-btn {
  position: absolute;
  top: -130rpx;
  left: 25rpx;
}
.menu-btn image {
  width: 100rpx;
  height: 100rpx;
}
/* menu-btn styles end*/
/* Cart Style end */
/* 商品详情页开始 */
.item-detail {
  width: 690rpx;
  position: fixed;
  top: 6%;
  left: 50%;
  margin-left: -345rpx;
  background-color: #fff;
  z-index: 100;
}
.item-img-view {
  font-size: 0rpx;
}
.item-img-view image {
  width: 690rpx;
  height: 530rpx;
}
.item-ct {
  padding: 46rpx 30rpx 43rpx 30rpx;
}
.item-ct-first {
  line-height: 1;
  padding-bottom: 43rpx;
}
.item-ct-bd {
  float: left;
}
.item-ct-name {
  font-size: 32rpx;
  color: #2f2f2f;
}
.item-ct-num {
  font-size: 28rpx;
  color: #999799;
  margin-top: 20rpx;
}
.item-ct-btn {
  float: right;
}
.item-ct-btn button {
  width: 174rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #23a4bb;
  color: #fff;
  border-radius: 10rpx;
}
.item-ct-des {
  line-height: 1.7;
  font-size: 26rpx;
  padding-top: 30rpx;
  color: #797979;
  border-top: 1px solid #e2e2e2;
}
/* 商品详情页结束 */
/* select preferences  style begin */
.item-preferences {
  width: 630rpx;
  position: fixed;
  top: 10%;
  left: 50%;
  padding: 0 30rpx;
  margin-left: -345rpx;
  background-color: #fff;
  z-index: 100;
}
.item-pf-header {
  text-align: center;
  font-size: 32rpx;
  color: #2f2f2f;
  padding: 40rpx 0;
}
.item-pr-ct:last-child {
  border-bottom: 1px solid #e2e2e2;
}
.item-pf-ct-title {
  font-size: 26rpx;
  color: #818181;
}
.item-pf-ct-items {
  padding-bottom: 50rpx;
}
.item-pf-ct-items > text {
  max-width: 630rpx;
  float: left;
  font-size: 28rpx;
  padding: 19rpx 50rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  border: 1px solid #777;
  color: #818181;
  border-radius: 10rpx;
}
text.pf-selected {
  color: #23a4bb;
  border-color: #23a4bb;
}
.cart-pf-item {
  position: relative;
  padding: 40rpx 0rpx;
  /* padding-bottom: 10rpx; */
  border-top: 1px solid #e2e2e2;
  border-bottom: 1px solid #e2e2e2;
}
.item-pf-price {
  font-size: 28rpx;
  color: #999799;
}
.item-pf-btns {
  float: right;
  display: flex;
  align-items: center;
  position: absolute;
  right: -10rpx;
  top: 50%;
  margin-top: -35rpx;
}
.item-pf-des {
  float: left;
  line-height: 1;
}
.pf-add-btn {
  padding: 40rpx 0;
}
.pf-add-btn > text {
  margin: 0 auto;
  display: block;
  text-align: center;
  width: 174rpx;
  background-color: #23a4bb;
  border-radius: 10rpx;
  padding: 19rpx;
  color: #fff;
  font-size: 32rpx;
}
/* select preferences  style end */
/* table num confirm begin */
.tablenum-view {
  position: fixed;
  top: 20%;
  left: 50%;
  width: 600rpx;
  line-height: 1;
  padding-top: 68rpx;
  padding-bottom: 48rpx;
  text-align: center;
  margin-left: -300rpx;
  font-weight: 300;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 100;
}
.tablenum-view .title {
  font-size: 32rpx;
  color: #000;
  font-weight: 300;
}
.tablenum-view .input-view {
  margin: 50rpx auto 0;
}
.tablenum-view .input-view input {
  height: 80rpx;
  width: 486rpx;
  margin: 0 auto;
  font-size: 48rpx;
  border: 1px solid #31c3dd;
  color: #3e3e3e;
  font-weight: 300;
  border-radius: 4rpx;
}
.tablenum-view .btns {
  margin-top: 84rpx;
}
.tablenum-view .btns text {
  font-size: 32rpx;
}
.tablenum-view .btns text:nth-child(1) {
  color: #787878;
  margin-right: 54rpx;
}
.tablenum-view .btns text:nth-child(2) {
  display: inline-block;
  width: 168rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-color: rgba(31, 195, 221, 0.9);
}
/* table num confirm end */
